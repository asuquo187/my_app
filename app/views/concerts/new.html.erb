<!-- Validation failure messages -->

<% if @concert.errors.any? %>
  <% @concert.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Concert Review</h3>
      </div>
      <div class="panel-body">
        <form action="/create_concert" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for artist -->
          <div class="form-group">
            <label for="artist" class="col-sm-2 control-label">
              Artist
            </label>
            <div class="col-sm-10">
              <input type="text" id="artist" name="artist" placeholder="Artist" class="form-control" value="<%= @concert.artist %>">
            </div>
          </div>

          <!-- Label and input for music_genre -->
          <div class="form-group">
            <label for="music_genre" class="col-sm-2 control-label">
              Music genre
            </label>
            <div class="col-sm-10">
              <input type="text" id="music_genre" name="music_genre" placeholder="Music genre" class="form-control" value="<%= @concert.music_genre %>">
            </div>
          </div>

          <!-- Label and input for city -->
          <div class="form-group">
            <label for="city" class="col-sm-2 control-label">
              City
            </label>
            <div class="col-sm-10">
              <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @concert.city %>">
            </div>
          </div>

          <!-- Label and input for date -->
          <div class="form-group">
            <label for="date" class="col-sm-2 control-label">
              Date
            </label>
            <div class="col-sm-10">
              <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @concert.date %>">
            </div>
          </div>

          <!-- Label and input for venue -->
          <div class="form-group">
            <label for="venue" class="col-sm-2 control-label">
              Comments
            </label>
            <div class="col-sm-10">
              <input type="text" id="venue" name="venue" placeholder="Comments" class="form-control" value="<%= @concert.venue %>">
            </div>
          </div>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Concert
              </button>
              or
              <a href="/concerts">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
